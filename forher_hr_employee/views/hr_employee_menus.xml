<odoo>
    <data noupdate="0">

         <!-- Ẩn menu Departments -->
        <record id="hr.menu_hr_department_kanban" model="ir.ui.menu">
            <field name="active" eval="False"/>
        </record>

        <!-- Ẩn menu Reporting -->
        <record id="hr.hr_menu_hr_reports" model="ir.ui.menu">
            <field name="active" eval="False"/>
        </record>

        <!-- Ẩn menu Configuration -->
        <record id="hr.menu_human_resources_configuration" model="ir.ui.menu">
            <field name="active" eval="False"/>
        </record>

        <!-- Đổi tên Employees thành Nhân viên -->
        <record id="hr.menu_hr_employee_payroll" model="ir.ui.menu">
            <field name="name"> Nhân viên</field>
        </record>

        <record id="forher_hr_employee.forher_hr_menu_company" model="ir.ui.menu">
            <field name="name">Chi nhánh</field>
        </record>

        <!-- ================= Action Company ================= -->
        <record id="action_forher_company_kanban" model="ir.actions.act_window">
            <field name="name">Company</field>
            <field name="res_model">res.company</field>
            <field name="view_mode">kanban,form</field>
            <field name="view_id" ref="view_forher_company_kanban"/>
        </record>

        <!-- Action Loại nhân viên -->
        <record id="action_employee_type" model="ir.actions.act_window">
            <field name="name">Loại nhân viên</field>
            <field name="res_model">employee.type</field>
            <field name="view_mode">kanban,form</field>
            <field name="view_id" ref="view_employee_type_kanban"/>
        </record>

        <!-- ================= Menu gốc ================= -->
        <record id="hr.menu_hr_root" model="ir.ui.menu">
            <field name="name">Nhân Sự </field>
            <field name="sequence">3</field>
        </record>

        <!-- Menu Company -->
        <record id="forher_hr_menu_company" model="ir.ui.menu">
            <field name="name">Company</field>
            <field name="parent_id" ref="hr.menu_hr_root"/>
            <field name="action" ref="action_forher_company_kanban"/>
            <field name="sequence">3</field>
        </record>

        <!-- Menu Loại nhân viên -->
        <record id="forher_hr_menu_employee_type" model="ir.ui.menu">
            <field name="name">Loại nhân viên</field>
            <field name="parent_id" ref="hr.menu_hr_root"/> 
            <field name="action" ref="action_employee_type"/>
            <field name="sequence">4</field>
        </record>

    </data>
</odoo>
