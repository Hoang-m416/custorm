<odoo>
    <data>
        <!-- Kanban view -->
        <record id="view_employee_type_kanban" model="ir.ui.view">
            <field name="name">employee.type.kanban</field>
            <field name="model">employee.type</field>
            <field name="arch" type="xml">
                <kanban class="o_kanban_example">
                    <field name="name"/>
                    <field name="code"/>
                    <field name="employee_count"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_global_click">
                                <strong><field name="name"/></strong>
                                <div>Mã: <field name="code"/></div>
                                <div class="mt-2">
                                    <button type="object"
                                            name="action_view_employees"
                                            class="btn btn-primary btn-sm">
                                        <field name="employee_count" widget="statinfo"/>
                                    </button>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <!-- List view -->
        <record id="view_employee_type_list" model="ir.ui.view">
            <field name="name">employee.type.list</field>
            <field name="model">employee.type</field>
            <field name="arch" type="xml">
                <list string="Loại nhân viên">
                    <field name="name"/>
                    <field name="code"/>
                    <field name="employee_count"/>
                </list>
            </field>
        </record>

        <!-- Action -->
        <record id="action_employee_type" model="ir.actions.act_window">
            <field name="name">Loại nhân viên</field>
            <field name="res_model">employee.type</field>
            <field name="view_mode">kanban,list</field>
            <field name="view_ids" eval="[
                (5,0,0),
                (0,0,{'view_mode':'kanban','view_id':ref('view_employee_type_kanban')}),
                (0,0,{'view_mode':'list','view_id':ref('view_employee_type_list')})
            ]"/>
        </record>
    </data>
</odoo>
