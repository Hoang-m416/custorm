<odoo>
    <data noupdate="1">

        <!-- Rule cho Giám đốc: Xem và sửa tất cả nhân viên -->
        <record id="rule_access_hr_employee_board" model="ir.rule">
            <field name="name">HR Employee Board (Giám đốc)</field>
            <field name="model_id" ref="model_hr_employee"/>
            <field name="domain_force">[]</field>
            <field name="groups" eval="[(4, ref('forher_company_overview.forher_group_board'))]"/>
            <field name="perm_read">1</field>
            <field name="perm_write">1</field>
            <field name="perm_create">1</field>
            <field name="perm_unlink">1</field>
        </record>

        <!-- Rule cho Quản lý chi nhánh: Chỉ xem nhân viên trong công ty của họ -->
        <record id="rule_access_hr_employee_company_manager" model="ir.rule">
            <field name="name">HR Employee Company Manager</field>
            <field name="model_id" ref="model_hr_employee"/>
            <field name="domain_force">[('company_id', 'in', [e.company_id.id for e in user.employee_ids])] </field>
            <field name="groups" eval="[(4, ref('forher_company_overview.forher_group_branch_manager'))]"/>
            <field name="perm_read">1</field>
            <field name="perm_write">0</field>
            <field name="perm_create">0</field>
            <field name="perm_unlink">0</field>
        </record>

        <!-- Rule cho Nhân viên: Chỉ thấy bản thân -->
        <record id="rule_access_hr_employee_employee" model="ir.rule">
            <field name="name">HR Employee Employee</field>
            <field name="model_id" ref="model_hr_employee"/>
            <field name="domain_force">[('user_id','=',user.id)]</field>
            <field name="groups" eval="[(4, ref('forher_company_overview.forher_group_employee'))]"/>
            <field name="perm_read">1</field>
            <field name="perm_write">0</field>
            <field name="perm_create">0</field>
            <field name="perm_unlink">0</field>
        </record>

        <!-- Rule cho Giám đốc với hồ sơ nhân viên -->
        <record id="rule_access_hr_employee_document_board" model="ir.rule">
            <field name="name">HR Employee Document Board (Giám đốc)</field>
            <field name="model_id" ref="model_hr_employee_document"/>
            <field name="domain_force">[]</field>
            <field name="groups" eval="[(4, ref('forher_company_overview.forher_group_board'))]"/>
            <field name="perm_read">1</field>
            <field name="perm_write">1</field>
            <field name="perm_create">1</field>
            <field name="perm_unlink">1</field>
        </record>

        <!-- Rule cho Quản lý chi nhánh với hồ sơ nhân viên -->
        <record id="rule_access_hr_employee_document_company_manager" model="ir.rule">
            <field name="name">HR Employee Document Company Manager</field>
            <field name="model_id" ref="model_hr_employee_document"/>
            <field name="domain_force">[('employee_id.company_id', 'in', [e.company_id.id for e in user.employee_ids])] </field>
            <field name="groups" eval="[(4, ref('forher_company_overview.forher_group_branch_manager'))]"/>
            <field name="perm_read">1</field>
            <field name="perm_write">0</field>
            <field name="perm_create">0</field>
            <field name="perm_unlink">0</field>
        </record>

        <!-- Rule cho Nhân viên với hồ sơ nhân viên -->
        <record id="rule_access_hr_employee_document_employee" model="ir.rule">
            <field name="name">HR Employee Document Employee</field>
            <field name="model_id" ref="model_hr_employee_document"/>
            <field name="domain_force">[('employee_id.user_id','=',user.id)]</field>
            <field name="groups" eval="[(4, ref('forher_company_overview.forher_group_employee'))]"/>
            <field name="perm_read">1</field>
            <field name="perm_write">0</field>
            <field name="perm_create">0</field>
            <field name="perm_unlink">0</field>
        </record>

        <!-- Rule cho Giám đốc với Company -->
        <record id="rule_access_company_board" model="ir.rule">
            <field name="name">Company Board (Giám đốc)</field>
            <field name="model_id" ref="base.model_res_company"/>
            <field name="domain_force">[]</field>
            <field name="groups" eval="[(4, ref('forher_company_overview.forher_group_board'))]"/>
            <field name="perm_read">1</field>
            <field name="perm_write">1</field>
            <field name="perm_create">1</field>
            <field name="perm_unlink">1</field>
        </record>

        <!-- Rule cho Quản lý chi nhánh với Company -->
        <record id="rule_access_company_manager" model="ir.rule">
            <field name="name">Company Manager</field>
            <field name="model_id" ref="base.model_res_company"/>
            <field name="domain_force">[('id', 'in', [e.company_id.id for e in user.employee_ids])] </field>
            <field name="groups" eval="[(4, ref('forher_company_overview.forher_group_branch_manager'))]"/>
            <field name="perm_read">1</field>
            <field name="perm_write">0</field>
            <field name="perm_create">0</field>
            <field name="perm_unlink">0</field>
        </record>

    </data>
</odoo>
