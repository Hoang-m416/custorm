<odoo>
    <!-- ================= MENU GỐC ================= -->
    <menuitem id="menu_attendance_root"
              name="Chấm công &amp; Nghỉ phép"
              sequence="10"
              groups="base.group_user,base.group_system"/>

    <!-- ================= MENU CON ================= -->
    <menuitem id="menu_attendance_records"
              name="Chấm công"
              parent="menu_attendance_root"
              sequence="1"/>
    <menuitem id="menu_leave_records"
              name="Nghỉ phép / Giải trình"
              parent="menu_attendance_root"
              sequence="2"/>
    <menuitem id="menu_attendance_reports"
              name="Báo cáo"
              parent="menu_attendance_root"
              sequence="3"/>

    <!-- ================= ACTION CHẤM CÔNG ================= -->
    <record id="action_employee_attendance_custom" model="ir.actions.act_window">
        <field name="name">Danh sách chấm công</field>
        <field name="res_model">employee.attendance.custom</field>
        <field name="view_mode">list,form</field>
    </record>

    <menuitem id="menu_employee_attendance_custom_list"
              name="Danh sách chấm công"
              parent="menu_attendance_records"
              action="action_employee_attendance_custom"/>

    <!-- ================= ACTION NGHỈ PHÉP ================= -->
    <record id="action_employee_leave_request" model="ir.actions.act_window">
        <field name="name">Đơn nghỉ phép / Giải trình</field>
        <field name="res_model">employee.leave.request</field>
        <field name="view_mode">kanban,list,form</field>
    </record>

    <menuitem id="menu_employee_leave_request"
              name="Danh sách đơn nghỉ phép"
              parent="menu_leave_records"
              action="action_employee_leave_request"/>

    <!-- ================= LIST VIEW CHẤM CÔNG ================= -->
    <record id="view_employee_attendance_list" model="ir.ui.view">
        <field name="name">employee.attendance.list</field>
        <field name="model">employee.attendance.custom</field>
        <field name="arch" type="xml">
            <list string="Danh sách chấm công" create="true" edit="true">
                <field name="employee_id"/>
                <field name="date"/>
                <field name="check_in"/>
                <field name="check_out"/>
                <field name="work_hours_display"/>
                <field name="overtime"/>
                <field name="approval_status" widget="badge"
                       options="{'accepted':'success','refused':'danger','waiting':'warning'}"/>
                <field name="status" widget="badge"
                       options="{'confirmed':'info','approved':'success','draft':'secondary'}"/>
            </list>
        </field>
    </record>

    <!-- ================= FORM VIEW CHẤM CÔNG ================= -->
    <record id="view_employee_attendance_form" model="ir.ui.view">
        <field name="name">employee.attendance.form</field>
        <field name="model">employee.attendance.custom</field>
        <field name="arch" type="xml">
            <form string="Chấm công nhân sự">
                <header>
                    <button name="action_open_checkin_wizard" type="object"
                            string="Check In (Wizard)"
                            class="btn-primary"
                            invisible="status != 'draft'"/>
                    <button name="action_open_checkout_wizard" type="object"
                            string="Check Out (Wizard)"
                            class="btn-success"
                            invisible="status != 'confirmed'"/>
                    <button name="action_accept_overtime" type="object"
                            string="Chấp nhận OT"
                            class="btn-primary"
                            invisible="approval_status != 'waiting'"/>
                    <button name="action_refuse_overtime" type="object"
                            string="Từ chối OT"
                            class="btn-danger"
                            invisible="approval_status != 'waiting'"/>
                    <field name="approval_status" widget="statusbar"
                           statusbar_visible="waiting,accepted,refused"/>
                </header>
                <sheet>
                    <notebook>
                        <page string="Chấm công">
                            <group>
                                <field name="employee_id"/>
                                <field name="date"/>
                                <field name="work_type"/>
                                <field name="check_in" readonly="1"/>
                                <field name="check_out" readonly="1"/>
                                <field name="work_hours_display" readonly="1"/>
                                <field name="overtime"/>
                                <field name="leave_days"/>
                                <field name="status" widget="statusbar"
                                       statusbar_visible="draft,confirmed,approved"/>
                            </group>
                        </page>
                       
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- ================= WIZARD CHỌN THỜI GIAN ================= -->
    <record id="view_attendance_check_wizard_form" model="ir.ui.view">
        <field name="name">attendance.check.wizard.form</field>
        <field name="model">attendance.check.wizard</field>
        <field name="arch" type="xml">
            <form string="Chọn thời gian">
                <group>
                    <field name="attendance_id" invisible="1"/>
                    <field name="employee_id" readonly="1"/>
                    <field name="check_type" readonly="1"/>
                    <field name="check_datetime"/>
                    <field name="note"/>
                </group>
                <footer>
                    <button name="action_confirm" type="object" string="Xác nhận" class="btn-primary"/>
                    <button string="Hủy" special="cancel" class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_attendance_check_wizard" model="ir.actions.act_window">
        <field name="name">Chọn thời gian</field>
        <field name="res_model">attendance.check.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="view_id" ref="view_attendance_check_wizard_form"/>
    </record>

    <!-- ================= LIST & FORM NGHỈ PHÉP ================= -->
    <record id="view_employee_leave_request_kanban" model="ir.ui.view">
        <field name="name">employee.leave.request.kanban</field>
        <field name="model">employee.leave.request</field>
        <field name="arch" type="xml">
            <kanban default_group_by="status">
                <field name="employee_id"/>
                <field name="start_date"/>
                <field name="end_date"/>
                <field name="leave_days"/>
                <field name="status"/>
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_card oe_kanban_global_click">
                            <strong><field name="employee_id"/></strong><br/>
                            <span><field name="start_date"/> → <field name="end_date"/></span><br/>
                            <span>Số ngày: <field name="leave_days"/></span><br/>
                            <span><field name="status" widget="badge"
                                options="{'draft':'secondary','manager_approved':'info','hr_approved':'warning','done':'success','refused':'danger'}"/></span>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="view_employee_leave_request_list" model="ir.ui.view">
        <field name="name">employee.leave.request.list</field>
        <field name="model">employee.leave.request</field>
        <field name="arch" type="xml">
            <list string="Danh sách đơn nghỉ phép / Giải trình">
                <field name="employee_id"/>
                <field name="start_date"/>
                <field name="end_date"/>
                <field name="leave_days"/>
                <field name="status" widget="badge"
                       options="{'draft':'secondary','manager_approved':'info','hr_approved':'warning','done':'success','refused':'danger'}"/>
            </list>
        </field>
    </record>

    <record id="view_employee_leave_request_form" model="ir.ui.view">
        <field name="name">employee.leave.request.form</field>
        <field name="model">employee.leave.request</field>
        <field name="arch" type="xml">
            <form string="Đơn nghỉ phép / Giải trình">
                <header>
                    <button string="Trưởng đơn vị duyệt" type="object" name="action_manager_approve"
                            class="btn-primary" invisible="status != 'draft'"/>
                    <button string="P.TC-HC/Hiệu trưởng duyệt" type="object" name="action_hr_approve"
                            class="btn-info" invisible="status != 'manager_approved'"/>
                    <button string="Hoàn thành" type="object" name="action_done"
                            class="btn-success" invisible="status != 'hr_approved'"/>
                    <button string="Từ chối" type="object" name="action_refuse"
                            class="btn-danger" invisible="status in ('done','refused')"/>
                    <field name="status" widget="statusbar"
                           statusbar_visible="draft,manager_approved,hr_approved,done,refused"/>
                </header>
                <sheet>
                    <group>
                        <field name="employee_id"/>
                        <field name="start_date"/>
                        <field name="end_date"/>
                        <field name="leave_days" readonly="1"/>
                    </group>
                    <group>
                        <field name="reason"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
