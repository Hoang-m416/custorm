<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="forher_hr_contract_form_view" model="ir.ui.view">
        <field name="name">forher.hr.contract.form.view</field>
        <field name="model">forher.hr.contract</field>
        <field name="arch" type="xml">
            <form string="Hợp đồng nhân sự Forher">
                <header>
                    <button name="action_submit_for_approval" string="Gửi phê duyệt" type="object"
                            class="oe_highlight" invisible="state != 'draft'" groups="forher_company_overview.forher_group_branch_manager,forher_company_overview.forher_group_board,base.group_system"/>
                    <button name="action_running_contract" string="Duyệt" type="object"
                            class="oe_highlight" invisible="state != 'waiting_approval'" groups="forher_company_overview.forher_group_board,base.group_system"/>
                    <button name="action_reject_contract" string="Từ chối" type="object"
                            class="oe_highlight" invisible="state != 'waiting_approval'" groups="forher_company_overview.forher_group_board,base.group_system"/>
                    <button name="action_renew_contract" string="Gia hạn hợp đồng" type="object"
                            class="oe_highlight" invisible="state != 'close'"
                            groups="forher_company_overview.forher_group_branch_manager,forher_company_overview.forher_group_board,base.group_system"/>
                    <button name="action_cancel_contract" string="Hủy hợp đồng" type="object"
                            class="oe_highlight" invisible="state == 'cancel'"
                            groups="forher_company_overview.forher_group_branch_manager,forher_company_overview.forher_group_board,base.group_system"/>
                    <field name="state" 
                        widget="statusbar" 
                        statusbar_visible="draft,waiting_approval,open,close" 
                        readonly="1"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1 class="o_row">
                            <field name="name" required="0"/>
                        </h1>
                    </div>
                    <group>
                        <group string="Thông tin cơ bản">
                            <field name="company_id" string="Chi nhánh" domain="[('parent_id','!=',False)]"/>
                            <field name="employee_id" string="Nhân viên" options="{'no_create': True, 'no_open': True}"/>
                            <field name="job_id" string="Chức danh"/>
                            <field name="state" string="Trạng thái" readonly="1"/>
                            <field name="contract_type_id" string="Loại hợp đồng"/>
                        </group>
                        <group string="Thời gian hợp đồng">
                            <field name="date_start" string="Ngày bắt đầu"/>
                            <field name="date_end" string="Ngày kết thúc"/>
                            <field name="trial_date_end" string="Ngày kết thúc thử việc"/>
                            <field name="calendar_id"/>
                            <field name="attendance_ids" readonly="1">
                                <list>
                                    <field name="name"/>
                                    <field name="dayofweek"/>
                                    <field name="hour_from"/>
                                    <field name="hour_to"/>
                                </list>
                            </field>
                        </group>
                    </group>
                    <notebook>
                        <page string="Thông tin hợp đồng" name="information">
                            <group>
                                <group string="Thông tin lương">
                                    <field name="wage" string="Lương"/>
                                    <field name="currency_id" invisible="1"/>
                                    <field name="structure_type_id" string="Loại cấu trúc lương"/>
                                </group>
                                <group string="Địa điểm làm việc">
                                    <field name="company_id" groups="base.group_multi_company" string="Chi nhánh" readonly="1"/>
                                </group>

                                <group string="Chi tiết cá nhân">
                                    <field name="hr_responsible_id" string="Người phụ trách"/>
                                    <field name="notes" string="Ghi chú"/>
                                </group>
                            </group>
                        </page>
                        
                        <page string="Phụ cấp" name="allowances">
                            <group>
                                <field name="allowance_ids">
                                    <list string="Danh sách phụ cấp" readonly="1">
                                        <field name="name"/>
                                        <field name="amount"/>
                                    </list>
                                    <form string="Chi tiết phụ cấp">
                                        <group>
                                            <field name="name"/>
                                            <field name="amount"/>
                                        </group>
                                    </form>
                                </field>
                                <field name="total_allowance" string="Tổng phụ cấp" readonly="1"/>
                            </group>
                        </page>

                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="forher_hr_contract_list_view" model="ir.ui.view">
        <field name="name">forher.hr.contract.list.view</field>
        <field name="model">forher.hr.contract</field>
        <field name="arch" type="xml">
            <list string="Danh sách hợp đồng nhân sự">
                <field name="name" string="Tên hợp đồng"/>
                <field name="employee_id" string="Nhân viên"/>
                <field name="job_id" string="Chức danh"/>
                <field name="date_start" string="Ngày bắt đầu"/>
                <field name="date_end" string="Ngày kết thúc"/>
                <field name="wage" string="Lương"/>
                <field name="state" string="Trạng thái" readonly="1"/>
            </list>
        </field>
    </record>

    <record id="forher_hr_contract_action" model="ir.actions.act_window">
        <field name="name">Hợp đồng nhân sự</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">forher.hr.contract</field>
        <field name="view_mode">list,form</field>
        <field name="view_id" ref="forher_hr_contract_list_view"/>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                Nhấn vào đây để tạo hợp đồng nhân sự mới.
            </p>
        </field>
    </record>
</odoo>
