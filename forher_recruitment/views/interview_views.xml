<odoo>
    <data>

        <!-- ACTION & MENU -->
        <record id="action_interviews" model="ir.actions.act_window">
            <field name="name">Lịch phỏng vấn</field>
            <field name="res_model">forher.interview</field>
            <field name="view_mode">kanban,list,form</field>
        </record>

        <menuitem id="menu_interviews" 
                  name="Phỏng vấn" 
                  parent="menu_forher_root" 
                  action="action_interviews"/>

        <!-- KANBAN VIEW -->
        <record id="view_interview_kanban" model="ir.ui.view">
            <field name="name">interview.kanban</field>
            <field name="model">forher.interview</field>
            <field name="arch" type="xml">
                <kanban class="o_kanban_small_column">
                    <field name="applicant_id"/>
                    <field name="applicant_state"/>
                    <field name="interviewer_id"/>
                    <field name="interview_date"/>
                    <field name="location"/>
                    <field name="result"/>
                    <field name="progress"/>
                    <field name="state_label"/>

                    <templates>
                        <t t-name="kanban-box">
                            <div class="o_kanban_record p-2 border rounded mb-1">

                                <strong>
                                    <t t-esc="record.applicant_id.value ? record.applicant_id.value.display_name : '-'"/>
                                </strong>

                                <div>Người phỏng vấn:
                                    <t t-esc="record.interviewer_id.value ? record.interviewer_id.value : '-'"/>
                                </div>

                                <div>Thời gian:
                                    <t t-esc="record.interview_date.value ? record.interview_date.value : '-'"/>
                                </div>

                                <div>Địa điểm:
                                    <t t-esc="record.location.value ? record.location.value : '-'"/>
                                </div>

                                <div class="progress mt-1" style="height: 10px;">
                                    <div class="progress-bar bg-primary"
                                        t-att-style="'width: ' + (record.progress.value || 0) + '%'"/>
                                </div>

                                <small class="d-block mt-1 text-muted">
                                    <t t-esc="record.state_label.value || ''"/>
                                </small>

                                <div class="mt-1">
                                    <t t-if="record.applicant_state.raw_value == 'interview_scheduled'">
                                        <button type="object" name="action_start_interview" class="btn btn-warning btn-sm">
                                            Bắt đầu phỏng vấn
                                        </button>
                                    </t>

                                    <t t-if="record.applicant_state.raw_value == 'interviewing' &amp;&amp; !record.result.raw_value">
                                        <button type="object" name="action_pass" class="btn btn-success btn-sm me-1">
                                            Đạt
                                        </button>
                                        <button type="object" name="action_fail" class="btn btn-danger btn-sm">
                                            Không đạt
                                        </button>
                                    </t>

                                    <t t-if="record.result.raw_value">
                                        <div class="mt-1">
                                            <strong>Kết quả:
                                                <t t-esc="record.result.raw_value == 'pass' ? 'Đạt' : 'Không đạt'"/>
                                            </strong>
                                        </div>
                                    </t>
                                </div>

                            </div>
                        </t>
                    </templates>

                </kanban>
            </field>
        </record>

       <!-- FORM VIEW READ-ONLY -->
        <record id="view_interview_form" model="ir.ui.view">
            <field name="name">interview.form.readonly</field>
            <field name="model">forher.interview</field>
            <field name="arch" type="xml">
                <form string="Lịch phỏng vấn">
                    <header>
                        <field name="applicant_state" widget="statusbar"
                            options="{'interview_scheduled':'secondary',
                                        'interviewing':'info',
                                        'interview_passed':'success',
                                        'rejected':'danger'}" readonly="1"/>
                    </header>
                    <sheet>
                        <group string="Thông tin chung">
                            <field name="applicant_id" string="Ứng viên" readonly="1"/>
                            <field name="applicant_state" string="Trạng thái" readonly="1"/>
                            <field name="interviewer_id" string="Người phỏng vấn" readonly="1"/>
                            <field name="interview_date" string="Ngày/giờ phỏng vấn" readonly="1"/>
                            <field name="location" string="Địa điểm" readonly="1"/>
                        </group>
                        <group string="Chi tiết">
                            <field name="notes" string="Ghi chú" readonly="1"/>
                            <field name="result" string="Kết quả" readonly="1"/>
                            <field name="progress" string="Tiến độ" readonly="1"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>


        <!-- LIST VIEW -->
        <record id="view_interview_list" model="ir.ui.view">
            <field name="name">interview.list</field>
            <field name="model">forher.interview</field>
            <field name="arch" type="xml">
                <list string="Danh sách phỏng vấn" create="false" delete="false" default_order="interview_date desc">
                    <field name="applicant_id"/>
                    <field name="interviewer_id"/>
                    <field name="interview_date"/>
                    <field name="location"/>
                    <field name="progress"/>
                    <field name="applicant_state" readonly="1"/>
                </list>
            </field>
        </record>

        <!-- SEARCH VIEW -->
       <record id="view_interview_search" model="ir.ui.view">
            <field name="name">interview.search</field>
            <field name="model">forher.interview</field>
            <field name="arch" type="xml">
                <search string="Tìm kiếm phỏng vấn">
                    <field name="applicant_id"/>
                    <field name="interviewer_id"/>
                    <field name="interview_date"/>

                    <filter name="scheduled" string="Đã lên lịch" domain="[('applicant_state','=','interview_scheduled')]"/>
                    <filter name="in_progress" string="Đang diễn ra" domain="[('applicant_state','=','interviewing')]"/>
                    <filter name="completed" string="Đậu phỏng vấn" domain="[('applicant_state','=','interview_passed')]"/>
                    <filter name="failed" string="Không đạt" domain="[('applicant_state','=','rejected')]"/>
                    <filter name="new" string="Mới" domain="[('applicant_state','=','new')]"/>
                    <filter name="screened" string="Đã sàng lọc" domain="[('applicant_state','=','screened')]"/>
                    <filter name="offer" string="Offer" domain="[('applicant_state','=','offer')]"/>
                    <filter name="pending_confirmation" string="Chờ xác nhận" domain="[('applicant_state','=','pending_confirmation')]"/>
                    <filter name="direct_hire" string="Tuyển ngay" domain="[('applicant_state','=','direct_hire')]"/>
                    <filter name="hire_confirmed" string="Đã xác nhận tuyển" domain="[('applicant_state','=','hire_confirmed')]"/>
                    <filter name="hired" string="Đã tuyển" domain="[('applicant_state','=','hired')]"/>
                    <filter name="waiting" string="Dự bị" domain="[('applicant_state','=','waiting')]"/>
                </search>
            </field>
        </record>

    </data>
</odoo>
