<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

        <!-- ================= WIZARD ACTION ================= -->
        <record id="action_recruitment_request_wizard" model="ir.actions.act_window">
            <field name="name">Tạo Yêu cầu tuyển dụng</field>
            <field name="res_model">recruitment.request.wizard</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>

        <!-- ================= KANBAN ================= -->
        <record id="view_recruitment_request_kanban" model="ir.ui.view">
            <field name="name">recruitment.request.kanban</field>
            <field name="model">recruitment.request</field>
            <field name="arch" type="xml">
                <kanban class="o_kanban_small_column" default_group_by="state" create="false">
                    <field name="state"/>
                    <field name="name"/>
                    <field name="position"/>
                    <field name="company_id"/>
                    <field name="number_of_positions"/>
                    <field name="progress"/>
                    <field name="progress_color"/>
                    <templates>
                        <t t-name="kanban-box" t-key="record.id">
                            <div class="o_kanban_record">
                                <strong><field name="name"/></strong>
                                <div><field name="position"/></div>
                                <div><field name="company_id" string="Công ty con" options="{'no_create': True}" domain="[('parent_id','!=',False)]"/></div>
                                <div>Số lượng: <field name="number_of_positions"/></div>

                                <!-- Progress bar -->
                                <div class="progress mt-1" style="height: 10px;">
                                    <div t-attf-class="progress-bar bg-#{record.progress_color.value or 'secondary'}"
                                         role="progressbar"
                                         t-att-style="'width: ' + (record.progress.value or 0) + '%';"
                                         t-att-aria-valuenow="record.progress.value or 0"
                                         aria-valuemin="0" aria-valuemax="100">
                                        <t t-esc="record.progress.value or 0"/>%
                                    </div>
                                </div>

                                <!-- Badge trạng thái -->
                                <div class="mt-1">
                                    <span class="badge">
                                        <t t-esc="record.state.value or ''"/>
                                    </span>
                                </div>

                                <!-- Nút thao tác -->
                                <div class="mt-2">
                                    <t t-if="record.state.raw_value == 'draft'">
                                        <button type="object"
                                                name="action_submit"
                                                class="btn btn-primary btn-sm btn-dynamic"
                                                groups="forher_company_overview.forher_group_branch_manager,base.group_system">
                                            Gửi duyệt
                                        </button>
                                    </t>
                                    <t t-if="record.state.raw_value == 'submitted'">
                                        <button type="object"
                                                name="action_approve"
                                                class="btn btn-success btn-sm btn-dynamic"
                                                groups="forher_company_overview.forher_group_board,base.group_system">
                                            Duyệt
                                        </button>
                                        <button type="object"
                                                name="action_reject"
                                                class="btn btn-danger btn-sm btn-dynamic"
                                                groups="forher_company_overview.forher_group_board,base.group_system">
                                            Từ chối
                                        </button>
                                    </t>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <!-- ================= SEARCH VIEW ================= -->
        <record id="view_recruitment_request_search" model="ir.ui.view">
            <field name="name">recruitment.request.search</field>
            <field name="model">recruitment.request</field>
            <field name="arch" type="xml">
                <search string="Yêu cầu tuyển dụng">
                    <field name="name"/>
                    <field name="create_date"/>
                    <field name="company_id" string="Công ty con" domain="[('parent_id','!=',False)]"/>
                    <!-- Filter trạng thái -->
                    <filter name="draft" string="Nháp" domain="[('state','=','draft')]"/>
                    <filter name="submitted" string="Đã gửi" domain="[('state','=','submitted')]"/>
                    <filter name="approved" string="Đã duyệt" domain="[('state','=','approved')]"/>
                    <filter name="completed" string="Hoàn thành" domain="[('state','=','completed')]"/>
                    <filter name="rejected" string="Từ chối" domain="[('state','=','rejected')]"/>
                </search>
            </field>
        </record>

        <!-- ================= LIST ================= -->
        <record id="view_recruitment_request_list" model="ir.ui.view">
            <field name="name">recruitment.request.list</field>
            <field name="model">recruitment.request</field>
            <field name="arch" type="xml">
                <list string="Danh sách yêu cầu" create="false" delete="false" default_order="create_date desc">
                    <field name="name"/>
                    <field name="position"/>
                    <field name="company_id" string="Chi nhánh" domain="[('parent_id','!=',False)]"/>
                    <field name="number_of_positions"/>
                    <field name="salary_budget"/>
                    <field name="state" widget="badge" readonly="1"
                        options="{
                            'secondary': ['draft'],
                            'info': ['submitted'],
                            'primary': ['approved'],
                            'success': ['completed'],
                            'danger': ['rejected']
                        }"/>
                </list>
            </field>
        </record>

        <!-- ================= FORM ================= -->
        <record id="view_recruitment_request_form" model="ir.ui.view">
            <field name="name">recruitment.request.form</field>
            <field name="model">recruitment.request</field>
            <field name="arch" type="xml">
                <form string="Yêu cầu tuyển dụng" create="false" delete="false">
                    <header>
                        <field name="state" widget="statusbar"
                            options="{'draft':'secondary',
                                    'submitted':'info',
                                    'approved':'primary',
                                    'completed':'success',
                                    'rejected':'danger'}"/>
                        
                        <!-- Nút chỉ hiển thị khi trạng thái là draft -->
                        <button name="action_submit" string="Gửi duyệt" type="object" class="btn-primary btn-dynamic"
                                groups="forher_company_overview.forher_group_branch_manager,base.group_system"
                                invisible="state != 'draft'"/>
                        
                        <!-- Nút chỉ hiển thị khi trạng thái là submitted -->
                        <button name="action_approve" string="Duyệt" type="object" class="btn-success btn-dynamic"
                                groups="forher_company_overview.forher_group_board,base.group_system"
                                invisible="state != 'submitted'"/>
                        <button name="action_reject" string="Từ chối" type="object" class="btn-danger btn-dynamic"
                                groups="forher_company_overview.forher_group_board,base.group_system"
                                invisible="state != 'submitted'"/>
                    </header>

                    <sheet>
                        <div class="o_group row align-items-start">
                            <div class="o_inner_group col-lg-6">
                                <field name="name"/>
                                <field name="position"/>
                                <field name="company_id" string="Chi nhánh" domain="[('parent_id','!=',False)]"/>
                                <field name="number_of_positions"/>
                            </div>
                            <div class="o_inner_group col-lg-6">
                                <field name="salary_budget"/>
                                <field name="required_skills"/>
                                <field name="job_description"/>
                                <field name="progress" readonly="1"/>
                            </div>
                        </div>
                        <notebook>
                            <page string="Ứng viên đã tiếp nhận">
                                <field name="applicant_ids" readonly="1">
                                    <list>
                                        <field name="name"/>
                                        <field name="state"/>
                                        <field name="position_applied"/>
                                    </list>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- ================= WIZARD FORM ================= -->
        <record id="view_recruitment_request_wizard_form" model="ir.ui.view">
            <field name="name">recruitment.request.wizard.form</field>
            <field name="model">recruitment.request.wizard</field>
            <field name="arch" type="xml">
                <form string="Tạo Yêu cầu tuyển dụng">
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="position"/>
                            <field name="company_id" string="Chi nhánh" domain="[('parent_id','!=',False)]"/>
                            <field name="number_of_positions"/>
                            <field name="salary_budget"/>
                            <field name="required_skills"/>
                            <field name="job_description"/>
                        </group>
                    </sheet>
                    <footer>
                        <button name="action_save_draft" string="Lưu nháp" type="object" class="btn-secondary"/>
                        <button name="action_submit" string="Gửi duyệt" type="object" class="btn-primary"/>
                        <button string="Hủy" class="btn-default" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

    </data>
</odoo>
