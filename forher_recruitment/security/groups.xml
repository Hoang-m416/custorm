<odoo>
    <data>

        <!-- Rule cho Quản lý Chi nhánh: chỉ được thấy dữ liệu trong công ty của họ -->
        <record id="rule_request_branch_manager_company" model="ir.rule">
            <field name="name">Quản lý Chi nhánh - Xem dữ liệu trong công ty của họ</field>
            <field name="model_id" ref="model_recruitment_request"/>
            <field name="groups" eval="[(4, ref('forher_company_overview.forher_group_branch_manager'))]"/>
            <field name="domain_force">[('company_id', 'in', user.company_ids.ids)]</field>
        </record>

        <record id="rule_applicant_branch_manager_company" model="ir.rule">
            <field name="name">Quản lý Chi nhánh - Ứng viên trong công ty</field>
            <field name="model_id" ref="model_forher_applicant"/>
            <field name="groups" eval="[(4, ref('forher_company_overview.forher_group_branch_manager'))]"/>
            <field name="domain_force">[('company_id', 'in', user.company_ids.ids)]</field>
        </record>


        <!-- Rule cho Ban Giám Đốc: được xem tất cả dữ liệu -->
        <record id="rule_request_board_all" model="ir.rule">
            <field name="name">Board - Xem tất cả yêu cầu</field>
            <field name="model_id" ref="model_recruitment_request"/>
            <field name="groups" eval="[(4, ref('forher_company_overview.forher_group_board'))]"/>
            <field name="domain_force">[(1,'=',1)]</field>
        </record>

        <record id="rule_applicant_board_all" model="ir.rule">
            <field name="name">Board - Xem tất cả ứng viên</field>
            <field name="model_id" ref="model_forher_applicant"/>
            <field name="groups" eval="[(4, ref('forher_company_overview.forher_group_board'))]"/>
            <field name="domain_force">[(1,'=',1)]</field>
        </record>

    </data>
</odoo>
