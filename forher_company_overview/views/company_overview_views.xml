<odoo>
    <!-- Menu root -->
    <menuitem id="menu_forher_company_root"
              name="Công ty Forher"
              groups="base.group_user"/>

    <!-- Action tổng quan công ty -->
    <record id="action_company_overview" model="ir.actions.act_window">
        <field name="name">Tổng quan công ty</field>
        <field name="res_model">forher.company.overview</field>
        <field name="view_mode">kanban,form</field>
    </record>

    <!-- Menu tổng quan -->
    <menuitem id="menu_company_overview"
              name="Tổng quan"
              parent="menu_forher_company_root"
              action="action_company_overview"
              groups="base.group_user"/>

    <!-- Kanban view tổng quan công ty -->
    <record id="view_company_overview_kanban" model="ir.ui.view">
        <field name="name">forher.company.overview.kanban</field>
        <field name="model">forher.company.overview</field>
        <field name="arch" type="xml">
            <kanban>
                <field name="company_id"/>
                <field name="business_field"/>
                <templates>
                    <t t-name="kanban-box" t-key="record.id">
                        <div class="o_kanban_record">
                            <strong><field name="company_id"/></strong>
                            <div><field name="business_field"/></div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Form view tổng quan công ty -->
    <record id="view_company_overview_form" model="ir.ui.view">
        <field name="name">forher.company.overview.form</field>
        <field name="model">forher.company.overview</field>
        <field name="arch" type="xml">
            <form string="Tổng quan công ty">
                <sheet>
                    <group>
                        <field name="company_id"/>
                        <field name="business_field"/>
                    </group>
                    <notebook>
                        <!-- Tab Chi nhánh (lấy từ res.company.child_ids) -->
                        <page string="Chi nhánh">
                            <field name="subcompany_ids" widget="kanban">
                                <kanban>
                                    <templates>
                                        <t t-name="kanban-box" t-key="record.id">
                                            <div class="o_kanban_record">
                                                <strong><field name="name"/></strong>
                                                <div><field name="street"/></div>
                                                <div>MST: <field name="vat"/></div>
                                            </div>
                                        </t>
                                    </templates>
                                </kanban>
                            </field>
                        </page>

                        <!-- Tab Cấp phân quyền -->
                        <page string="Cấp phân quyền">
                            <field name="permission_level_ids" widget="kanban">
                                <kanban>
                                    <templates>
                                        <t t-name="kanban-box" t-key="record.id">
                                            <div class="o_kanban_record">
                                                <strong><field name="name"/></strong>
                                                <div>Mã: <field name="code"/></div>
                                                <div><field name="description"/></div>
                                            </div>
                                        </t>
                                    </templates>
                                </kanban>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
