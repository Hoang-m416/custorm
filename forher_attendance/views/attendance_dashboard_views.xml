<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Dashboard Kanban cho nhân viên -->
    <record id="view_attendance_dashboard_kanban" model="ir.ui.view">
        <field name="name">attendance.dashboard.kanban</field>
        <field name="model">hr.employee</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile" create="false">
                <field name="name"/>
                <field name="attendance_state"/>
                <field name="last_attendance_id"/>
                <field name="company_id"/>
                <field name="attendance_count"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click o_kanban_card">
                            <div class="o_kanban_record_top d-flex justify-content-between align-items-center">
                                <div class="o_kanban_record_headings">
                                    <strong class="o_kanban_record_title">
                                        <field name="name"/>
                                    </strong><br/>
                                    <small class="o_kanban_record_subtitle text-muted">
                                        <field name="company_id"/>
                                    </small>
                                </div>
                                <div>
                                    <t t-if="record.attendance_state.raw_value == 'checked_in'">
                                        <span class="badge text-bg-success">Đang làm việc</span>
                                    </t>
                                    <t t-else="">
                                        <span class="badge text-bg-secondary">Đã ra về</span>
                                    </t>
                                </div>
                            </div>

                            <div class="o_kanban_record_body mt-2">
                                <div>
                                    <small>Lần chấm công:</small><br/>
                                    <strong><field name="attendance_count"/></strong>
                                </div>
                            </div>

                            <div class="o_kanban_record_bottom mt-2">
                                <button name="action_view_attendance" type="object"
                                        class="btn btn-sm btn-outline-primary">
                                    Xem lịch sử
                                </button>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Action cho Dashboard -->
    <record id="action_attendance_dashboard" model="ir.actions.act_window">
        <field name="name">Dashboard Chấm công</field>
        <field name="res_model">hr.employee</field>
        <field name="view_mode">list,kanban</field>
        <field name="view_id" ref="view_attendance_dashboard_kanban"/>
        <field name="domain">[('user_id', '=', uid)]</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Chấm công hàng ngày
            </p>
            <p>
                Theo dõi thời gian làm việc của bạn và lịch sử chấm công.
            </p>
        </field>
    </record>
</odoo>
