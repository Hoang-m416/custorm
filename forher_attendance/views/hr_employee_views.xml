<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Thêm PIN field vào employee form -->
        <record id="hr_employee_form_inherit_forher_pin" model="ir.ui.view">
            <field name="name">hr.employee.form.inherit.forher.pin</field>
            <field name="model">hr.employee</field>
            <field name="inherit_id" ref="hr.view_employee_form"/>
            <field name="arch" type="xml">
                <xpath expr="//sheet" position="inside">
                    <group string="Kiosk chấm công" name="kiosk_group">
                        <field name="employee_code" string="Mã nhân viên"/>
                        <field name="pin" password="True" placeholder="Nhập 4-6 số cho kiosk chấm công" string="PIN Kiosk"/>
                        <field name="work_mode" string="Kiểu làm việc"/>
                        <field name="standard_work_days" string="Số ngày công chuẩn" readonly="1"/>
                    </group>
                </xpath>
            </field>
        </record>
    </data>
</odoo>