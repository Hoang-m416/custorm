<odoo>
    <data>
        <!-- Board: Thấy tất cả -->
        <record id="rule_attendance_board_all" model="ir.rule">
            <field name="name">Attendance - Board All</field>
            <field name="model_id" ref="forher_attendance.model_hr_attendance"/>
            <field name="groups" eval="[(4, ref('forher_company_overview.forher_group_board'))]"/>
            <field name="domain_force">[(1,'=',1)]</field>
        </record>

        <!-- Branch Manager: Thấy nhân viên trong công ty/chi nhánh -->
        <record id="rule_attendance_branch_manager_company" model="ir.rule">
            <field name="name">Attendance - Branch Manager Company</field>
            <field name="model_id" ref="forher_attendance.model_hr_attendance"/>
            <field name="groups" eval="[(4, ref('forher_company_overview.forher_group_branch_manager'))]"/>
            <field name="domain_force">[('employee_id.company_id', 'in', user.company_ids.ids)]</field>
        </record>

        <!-- Employee: Chỉ thấy chính mình -->
        <record id="rule_hr_attendance_employee" model="ir.rule">
            <field name="name">Attendance - chỉ xem của mình</field>
            <field name="model_id" ref="forher_attendance.model_hr_attendance"/>
            <field name="domain_force">[('employee_id', 'in', user.employee_ids.ids)]</field>
            <field name="groups" eval="[(4, ref('forher_company_overview.forher_group_employee'))]"/>
        </record>

        <!-- Board: Thấy tất cả -->
        <record id="rule_attendance_board_all" model="ir.rule">
            <field name="name">Attendance - Board All</field>
            <field name="model_id" ref="forher_attendance.model_forher_shift_assignment"/>
            <field name="groups" eval="[(4, ref('forher_company_overview.forher_group_board'))]"/>
            <field name="domain_force">[(1,'=',1)]</field>
        </record>
    </data>
</odoo>
