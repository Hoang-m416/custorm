<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <data noupdate="0">

    <!-- ===== HR Employee ===== -->

    <!-- Ban Giám Đốc: xem tất cả nhân viên (miễn lọc domain ở đây).
         Lưu ý: vẫn phụ thuộc các công ty được bật trong multi-company của user. -->
    <record id="rule_employee_board_all" model="ir.rule">
      <field name="name">Employee – Board sees all</field>
      <field name="model_id" ref="hr.model_hr_employee"/>
      <field name="groups" eval="[(4, ref('forher_company_overview.forher_group_board'))]"/>
      <field name="perm_read" eval="1"/>
      <field name="perm_write" eval="0"/>
      <field name="perm_create" eval="0"/>
      <field name="perm_unlink" eval="0"/>
      <field name="domain_force">[(1,'=',1)]</field>
    </record>

    <!-- Quản lý chi nhánh: chỉ xem nhân viên thuộc company hiện tại -->
    <record id="rule_employee_branch_manager_own" model="ir.rule">
      <field name="name">Employee – Branch manager only own company</field>
      <field name="model_id" ref="hr.model_hr_employee"/>
      <field name="groups" eval="[(4, ref('forher_company_overview.forher_group_branch_manager'))]"/>
      <field name="perm_read" eval="1"/>
      <field name="perm_write" eval="0"/>
      <field name="perm_create" eval="0"/>
      <field name="perm_unlink" eval="0"/>
      <field name="domain_force">[('company_id','=', user.company_id.id)]</field>
    </record>

    <!-- Nhân viên: chỉ xem hồ sơ của chính mình -->
    <record id="rule_employee_self" model="ir.rule">
      <field name="name">Employee – Self only</field>
      <field name="model_id" ref="hr.model_hr_employee"/>
      <field name="groups" eval="[(4, ref('forher_company_overview.forher_group_employee'))]"/>
      <field name="perm_read" eval="1"/>
      <field name="perm_write" eval="0"/>
      <field name="perm_create" eval="0"/>
      <field name="perm_unlink" eval="0"/>
      <field name="domain_force">[('user_id','=', user.id)]</field>
    </record>

    <!-- ===== HR Attendance ===== -->

    <!-- Ban Giám Đốc: xem tất cả chấm công -->
    <record id="rule_attendance_board_all" model="ir.rule">
      <field name="name">Attendance – Board sees all</field>
      <field name="model_id" ref="hr_attendance.model_hr_attendance"/>
      <field name="groups" eval="[(4, ref('forher_company_overview.forher_group_board'))]"/>
      <field name="perm_read" eval="1"/>
      <field name="perm_write" eval="1"/>
      <field name="perm_create" eval="1"/>
      <field name="perm_unlink" eval="0"/>
      <field name="domain_force">[(1,'=',1)]</field>
    </record>

    <!-- Quản lý chi nhánh: chỉ xem/chỉnh chấm công của NV thuộc company hiện tại -->
    <record id="rule_attendance_branch_manager_own" model="ir.rule">
      <field name="name">Attendance – Branch manager only own company</field>
      <field name="model_id" ref="hr_attendance.model_hr_attendance"/>
      <field name="groups" eval="[(4, ref('forher_company_overview.forher_group_branch_manager'))]"/>
      <field name="perm_read" eval="1"/>
      <field name="perm_write" eval="1"/>
      <field name="perm_create" eval="1"/>
      <field name="perm_unlink" eval="0"/>
      <field name="domain_force">[('employee_id.company_id','=', user.company_id.id)]</field>
    </record>

    <!-- Nhân viên: chỉ xem chấm công của bản thân (UI); tạo qua kiosk không cần quyền vì controller dùng sudo -->
    <record id="rule_attendance_self" model="ir.rule">
      <field name="name">Attendance – Self only</field>
      <field name="model_id" ref="hr_attendance.model_hr_attendance"/>
      <field name="groups" eval="[(4, ref('forher_company_overview.forher_group_employee'))]"/>
      <field name="perm_read" eval="1"/>
      <field name="perm_write" eval="0"/>
      <field name="perm_create" eval="0"/>
      <field name="perm_unlink" eval="0"/>
      <field name="domain_force">[('employee_id.user_id','=', user.id)]</field>
    </record>

  </data>
</odoo>
