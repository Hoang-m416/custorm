<odoo>
    <!-- List view -->
    <record id="view_holiday_list" model="ir.ui.view">
        <field name="name">forher.holiday.calendar.list</field>
        <field name="model">forher.holiday.calendar</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="date"/>
                <field name="description"/>
            </list>
        </field>
    </record>

    <!-- Form view -->
    <record id="view_holiday_form" model="ir.ui.view">
        <field name="name">forher.holiday.calendar.form</field>
        <field name="model">forher.holiday.calendar</field>
        <field name="arch" type="xml">
            <form string="Ngày lễ">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="date"/>
                        <field name="description"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Calendar view -->
    <record id="view_holiday_calendar" model="ir.ui.view">
        <field name="name">forher.holiday.calendar.calendar</field>
        <field name="model">forher.holiday.calendar</field>
        <field name="arch" type="xml">
            <calendar string="Lịch ngày lễ" date_start="date" color="name">
                <field name="name"/>
                <field name="description"/>
            </calendar>
        </field>
    </record>

    <!-- Action -->
    <record id="action_holiday" model="ir.actions.act_window">
        <field name="name">Ngày lễ</field>
        <field name="res_model">forher.holiday.calendar</field>
        <field name="view_mode">list,form,calendar</field>
    </record>
</odoo>
