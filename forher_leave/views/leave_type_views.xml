<odoo>
    <record id="view_leave_type_list" model="ir.ui.view">
        <field name="name">forher.leave.type.list</field>
        <field name="model">forher.leave.type</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="code"/>
                <field name="max_days"/>
                <field name="is_paid"/>
            </list>
        </field>
    </record>

    <record id="view_leave_type_form" model="ir.ui.view">
        <field name="name">forher.leave.type.form</field>
        <field name="model">forher.leave.type</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="code"/>
                        <field name="max_days"/>
                        <field name="is_paid"/>
                        <field name="description"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_leave_type" model="ir.actions.act_window">
        <field name="name">Loại nghỉ</field>
        <field name="res_model">forher.leave.type</field>
        <field name="view_mode">list,form</field>
    </record>
</odoo>
