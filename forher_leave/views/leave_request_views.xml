<odoo>
    <record id="view_leave_request_list" model="ir.ui.view">
        <field name="name">forher.leave.request.list</field>
        <field name="model">forher.leave.request</field>
        <field name="arch" type="xml">
            <list string="Yêu cầu nghỉ phép" decoration-bf="is_holiday_leave" >
                <field name="employee_id" string="Nhân viên" />
                <field name="leave_type_id" string="Loại nghỉ" />
                <field name="start_date" string="Ngày bắt đầu" />
                <field name="end_date" string="Ngày kết thúc" />
                <field name="days_count" string="Số ngày nghỉ" />
                <field name="remaining_days" string="Còn lại" />
                <field name="state" widget="badge"
       decoration-muted="state == 'draft'"
       decoration-warning="state == 'confirm'"
       decoration-success="state == 'approve'"
       decoration-danger="state == 'reject'"/>
                <field name="is_holiday_leave" string="Ngày lễ" />
            </list>
        </field>
    </record>

    <record id="view_leave_request_form" model="ir.ui.view">
        <field name="name">forher.leave.request.form</field>
        <field name="model">forher.leave.request</field>
        <field name="arch" type="xml">
            <form string="Yêu cầu nghỉ phép">
                <header>
                    <!-- Nút gửi duyệt: nhân viên + admin -->
                    <button name="action_confirm" type="object" string="Gửi duyệt"
                        groups="forher_company_overview.forher_group_employee,base.group_system"
                        invisible="state != 'draft'"/>
                    
                    <!-- Nút duyệt: trưởng chi nhánh + admin -->
                    <button name="action_approve" type="object" string="Duyệt"
                        groups="forher_company_overview.forher_group_branch_manager,base.group_system"
                        invisible="state != 'confirm'"/>
                    
                    <!-- Nút từ chối: trưởng chi nhánh + admin -->
                    <button name="action_reject" type="object" string="Từ chối"
                        groups="forher_company_overview.forher_group_branch_manager,base.group_system"
                        invisible="state != 'confirm'"/>
                    
                    <!-- Nút đặt lại nháp: chỉ admin -->
                    <button name="action_reset_draft" type="object" string="Đặt lại nháp"
                        groups="base.group_system"
                        invisible="not (state in ['reject','approve'])"/>

                    <!-- Statusbar với màu theo trạng thái -->
                    <field name="state" widget="statusbar" statusbar_visible="draft,confirm,approve,reject"/>
                </header>
                <sheet>
                    <group>
                        <field name="employee_id"/>
                        <field name="leave_type_id"/>
                        <field name="start_date"/>
                        <field name="end_date"/>
                        <field name="days_count" readonly="1"/>
                        <field name="remaining_days" readonly="1"/>
                        <field name="is_holiday_leave" readonly="1"/>
                        <field name="note"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Calendar view -->
    <record id="view_leave_request_calendar" model="ir.ui.view">
        <field name="name">forher.leave.request.calendar</field>
        <field name="model">forher.leave.request</field>
        <field name="arch" type="xml">
            <calendar string="Lịch nghỉ phép"
                    date_start="start_date"
                    date_stop="end_date"
                    color="leave_type_id">
                <!-- Hiển thị tên leave request thay vì employee_id -->
                <field name="name"/>
                <field name="leave_type_id"/>
                <field name="state"/>
            </calendar>
        </field>
    </record>


    <record id="action_leave_request" model="ir.actions.act_window">
        <field name="name">Yêu cầu nghỉ phép</field>
        <field name="res_model">forher.leave.request</field>
        <field name="view_mode">list,form,calendar</field>
    </record>
</odoo>
